{
  "name": "react-minimal-boilerplate",
  "version": "1.0.0",
  "description": "This is a minimal boilerplate for React development",
  "main": "index.js",
  "scripts": {
    "dev": "webpack serve --config ./webpack/webpack.config.js --env=dev",
    "build": "webpack --config ./webpack/webpack.config.js --env=prod",
    "deploy:gh-pages": "rimraf dist && npm run build && rimraf dist/report.html && gh-pages -d dist",
    "lint": "eslint .",
    "format": "pretty-quick",
    "test": "jest",
    "start": "node .",
    "heroku-postbuild": "rimraf dist && npm run build && rimraf dist/report.html"
  },
  "author": "tabomors",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "@react-mock/fetch": "^0.3.0",
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^26.0.15",
    "@types/react-dom": "^17.0.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.0.1",
    "css-modules-typescript-loader": "^4.0.1",
    "eslint": "^7.14.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "gh-pages": "^3.1.0",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^5.0.0-alpha.14",
    "jest": "^26.6.3",
    "node-fetch": "^2.6.7",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "querystringify": ">=2.2.0",
    "rimraf": "^3.0.2",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.0.3",
    "ts-loader": "^8.0.11",
    "typescript": "^4.1.2",
    "webpack": "^5.8.0",
    "webpack-bundle-analyzer": "^4.1.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.4.0"
  }
}
